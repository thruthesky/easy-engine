rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    // The public information of the user.
    // Warning: This is a public document. Do not store sensitive information like
    // email, phone number, address, card number, license number, etc.
    match /users/{uid} {
      allow read: if true;
      allow create: if (request.auth.uid == uid) && notUpdating(['admin']);
      allow update: if (request.auth.uid == uid) && notUpdating(['admin']);
      allow delete: if false;

      
      // The private information of the user.
      // Save sensitive information here like email, phone number.
      match /user_meta/private {
        allow read: if request.auth.uid == uid;
        allow create: if (request.auth.uid == uid);
        allow update: if (request.auth.uid == uid);
        allow delete: if false;
      }

      // The settings of the user.
      match /user_meta/settings {
        allow read: if true;
        allow create: if (request.auth.uid == uid);
        allow update: if (request.auth.uid == uid);
        allow delete: if false;
      }
    }
    
    match /posts/{postId} {
      allow read: if true;
      allow create: if willBeMyDoc();
      allow update: if willBeMyDoc() && isMyDoc();
    }
    




    function areUsersInTaskGroup(taskGroupId, uids) {
      let taskGroupDoc = get(/databases/$(database)/documents/task-group/$(taskGroupId));
      let taskAllUids = taskGroupDoc.data['users'].toSet()
                          .union(taskGroupDoc.data['moderatorUsers'].toSet())
                          .union([taskGroupDoc.data['creator']].toSet());
      return  taskGroupDoc != null && taskAllUids.hasAll(uids);
    }

    function areCreatorOrModerators(taskGroupId, uids) {
      let taskGroupDoc = get(/databases/$(database)/documents/task-group/$(taskGroupId));
      let taskAllUids = taskGroupDoc.data['moderatorUsers'].toSet()
                          .union([taskGroupDoc.data['creator']].toSet());
      return taskGroupDoc != null && taskAllUids.hasAll(uids);
    }


    
    match /task/{taskId} {
      allow read: if isAuthenticated();
      allow create: if 
        isAuthenticated()
        && 
        willBeMyField('creator')
        && (
          !('taskGroupId' in request.resource.data)
          ||
          (
            areUsersInTaskGroup(request.resource.data['taskGroupId'], [request.auth.uid])
            && (
              !('assignedUsers' in request.resource.data)
              ||
              areUsersInTaskGroup(request.resource.data['taskGroupId'], request.resource.data["assignedUsers"])
            )
          )
        );
      allow update: if isAuthenticated()
        && areCreatorOrModerators(request.resource.data['taskGroupId'], [request.auth.uid]) 
        && request.resource.data['creator'] == resource.data['creator'];
    }

    match /task-group/{taskGroupId} {
      allow read: if true;
      allow create: if willBeMyField('creator');
      allow update: if (isMyField('creator') || resource.data.moderatorUsers.hasAny([request.auth.uid]))
                        && resource.data['creator'] == request.resource.data['creator'];
    }
    
    match /task-assign/{taskAssignId} {

      function isValidTaskAssignWithoutGroup(taskId) {
        let taskDoc = get(/databases/$(database)/documents/task/$(taskId));
        return taskDoc.data['creator'] == request.auth.uid && !('taskGroupId' in taskDoc.data);
      }

      allow read: if true;
      allow create: if
        isAuthenticated()
        && 'taskId' in request.resource.data
        && willBeMyField('assignedBy')
        && (
          (
            willBeMyField('assignedTo') 
            && !('taskGroupId' in request.resource.data)
            && isValidTaskAssignWithoutGroup(request.resource.data['taskId'])
          )
          || areUsersInTaskGroup(
            request.resource.data['taskGroupId'], 
            [request.auth.uid, request.resource.data['assignedTo']],
          )
        );

        // TODO reassignments
      allow update: if
        isAuthenticated()
        && notUpdating(['taskId', 'taskGroupId',])
        && (
          (isMyField('assignedBy') && isMyField('assignedTo') && notUpdating(['assignedBy', 'assignedTo']))
          || (
            'taskGroupId' in request.resource.data
            && areUsersInTaskGroup(
              request.resource.data['taskGroupId'], 
              [request.auth.uid, request.resource.data['assignedTo']],
            )
          )
        );
        // TODO reassignments
    }



    // temporary rules test
    match /temp/{doc} {
      allow read: if false;
      allow create: if willBeMyDoc();
      allow update: if isMyDoc() || willBeMyDoc()
          && notUpdating(['uid'])
          && mustUpdating(['name'])
          && onlyAddingOneElement('users')
          && notRemoving('users', 'a')
          && onlyRemoving('users', 'a')
          && fieldCheck(['required', 'fields'], ['optional', 'fields'])
          ;
      allow delete: if false;
    }
  // EO of Rules
  }
}


// example: fieldCheck(['required', 'fields'], ['optional', 'fields'])
function fieldCheck(requires, optional) {
  let all = requires.concat( optional );
  // let fC = debug('****** fieldCheck *****');
  return required( requires ) && request.resource.data.keys().hasOnly(all);
}

// * Warning : It's check the fields after save.
// * Warning : !!! It's not checking the incoming data fields !!!
function required(fields) {
  // let d = debug('**** required ****');
  // let e = debug(request.resource.data);
  return request.resource.data.keys().hasAll( fields );
}

function isAuthenticated() {
  return request.auth != null && request.auth.token.firebase.sign_in_provider != null;
}

// function isAnonymous() {
